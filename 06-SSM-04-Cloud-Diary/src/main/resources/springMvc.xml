<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <!--扫描指定包下的注解-->
    <context:component-scan base-package="com.hcy.controller"/>

    <!--开启注解-->
    <mvc:annotation-driven/>

    <import resource="classpath:applicationContext.xml"/>

    <!--放行静态资源-->
    <mvc:default-servlet-handler/>


    <!--配置文件解析器-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--上传文件的最大大小(字节)-->
        <property name="maxUploadSize" value="50000000" />
        <!--缓存-->
        <property name="maxInMemorySize" value="4096" />
        <!--默认的编码集-->
        <property name="defaultEncoding" value="defaultEncoding"/>
        <!--单个文件的最大大小(字节)-->
        <property name="maxUploadSizePerFile" value="2000000"/>
    </bean>

    <!-- 注解驱动 -->
    <mvc:annotation-driven/>
    <mvc:resources location="/statics/css/" mapping="/css/**"/>
    <mvc:resources location="/statics/js/" mapping="/js/**"/>


</beans>